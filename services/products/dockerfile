# 🏗 Stage 1: Build
FROM golang:1.24 AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY services/orders/ ./services/orders/

# ✅ Build static binary for Linux AMD64
ENV CGO_ENABLED=0
ENV GOOS=linux
ENV GOARCH=amd64

RUN go build -a -o /main ./services/orders/main.go

# 🏁 Stage 2: Minimal final image
FROM debian:bullseye-slim

WORKDIR /app

COPY --from=builder /main .

EXPOSE 4001

CMD ["/app/main"]